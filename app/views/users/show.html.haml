-unless current_user
  =link_to "Back home", root_path

%h2= "#{@user.email}'s highlights"

-if @highlights.present?
  %ul
    = render @highlights
-else
  No highlights found!

-if current_user == @user
  = form_for [current_user, @highlight] do |f|
    =f.label :title
    =f.text_field :title
    =f.label :description
    =f.text_field :description
    =f.submit